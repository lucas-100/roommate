<section class="bounded">
  {{#if model }}
    {{#with model }}
      {{#if person.isNewUser }}
        <div class="container bounded no-border">
          <div class="span6">
            <p>
              Do any of your roommates already use MyRoommate? Enter their email and we will add you to their house.
            </p>
          </div>

          <div class="clearfix"></div>
        </div>
      {{else}}
        <div class="three-quarter-container bounded no-border">
          <div class="span4">
            <h3 class="ribbon-header">I current owe</h3>

            <div class="balances">
              {{#each people }}
                {{#with this }}
                  {{#if isDebtor }}
                    <div class="balance">
                      <div class="span1 offset1">
                        <span class="balance-name">{{ name }}</span>
                      </div>
                      <div class="span1">
                        <span class="balance-amount">{{money balance }}</span>
                      </div>
                    </div>
                  {{/if}}
                {{/with }}
              {{/each }}
            </div>
          </div>

          <div class="span4 offset1">
            <h3 class="ribbon-header">My Roommates owe me</h3>

            <div class="balances">
              {{#each people }}
                {{#with this }}
                  {{#if isDebtee }}
                    <div class="balance">
                      <div class="span1 offset1">
                        <span class="balance-name">{{ name }}</span>
                      </div>
                      <div class="span1">
                        <span class="balance-amount">{{money balance }}</span>
                      </div>
                    </div>
                  {{/if}}
                {{/with }}
              {{/each }}
            </div>
          </div>
          <div class="clearfix"></div>
        </div>
      {{/if}}
    {{/with }}
  {{/if }}
</section>
