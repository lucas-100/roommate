{{#if model }}
{{#with model }}
<div class="span4">
  <h3 class="ribbon-header">I current owe</h3>

  <div class="balances">
    {{#each people }}
      {{#with this }}
      {{#if isDebtor }}
      <div class="balance">
        <div class="span1 offset1">
          <span class="balance-name">{{ name }}</span>
        </div>
        <div class="span1">
          <span class="balance-amount">{{money balance }}</span>
        </div>
      </div>
      {{/if}}
      {{/with }}
    {{/each }}
  </div>
</div>

