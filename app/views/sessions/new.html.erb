
			
			<div id="header">
			  <div class="column_1">
					<h1>Sign Up</h1>
				</div>
				
				<div class="column_2">
					<h1>Log In</h1>
				</div>
			</div>
			
			<div class="clearfix"></div>
      
      <div class="goldBoxMiddle">
      	
				<div class="column_1">
					<%= form_for(@signup) do |f| %>
						<label for="signup_email">Email<span class="small">This will be your login</span></label>
						<%= f.text_field :email %>
						
						<label for="signup_name">Name<span class="small">So we know you</span></label>
						<%= f.text_field :name %>
						
						<p>
							When you hit "Signup" below, we'll enter you into our queue of beta testers for the app.  Once we have a slot available
							we'll send you an email with your login information. Thanks for signing up!
						</p>
						
						<div class="actions">
							<button type="submit">Sign Up</button>
						</div>
					<% end %>
				</div>
				
				<div class="column_2">
			  	<%= form_tag session_path do %>
	  			  <label for="email">Email<span class="small">That you signed up with</span></label>
	  				<%= text_field_tag 'email', @email %>
          
	          <label for="password">Password<span class="small">So we know you're really you</span></label>
	  				<%= password_field_tag 'password', nil %>
						
						<div class="clearfix"></div>
						
	  				<!-- Uncomment this if you want this functionality -->
	  				<label for="remember_me">Remember Me?<span class="small">Login automatically</span></label>
	  				<%= check_box_tag 'remember_me', '1', @remember_me, {:style => "float:none;width:20px"} %>

	  				<div class="actions">
	  				  <button type="submit">Log In</button>
	  				</div>
	  			<% end %>
				</div>
  		  
				<div class="clearfix"></div>
  		  
  		  
  		</div>
  		
  		<div class="goldBoxBottom"></div>
