	<div class="clearfix"></div>
  
  <div id="header">
    <h1>
			<div id="house_name">	
				<%= @house.name %> <%= link_to "edit", edit_house_path(@house), :class => "edit", :id => "houseEditLink" %>
			</div>
			<%= form_for @house, :html => {:id => 'house_name_home', :style => "display:none"} do |f| %>
				<%= f.text_field :name %><button class="inline">Save</button>
			<% end %>
		</h1>
    <%= link_to '', new_expense_path, {:id => 'newExpense'}%>
    <%= link_to '', new_payment_path, {:id => 'newPayment'}%>
  </div>
  <div class="clearfix"></div>
  
  <%= render :partial => 'summary' %>
  
  <div id="expenses">
    <%= link_to '', new_expense_path, {:class => 'addBanner'}%>
    <div id="expensesHeader" class="boxHeader"></div>
    <div id="roommatesMiddle" class="boxMiddle">
      <div class="column_1">
        <%= render :partial => 'expenses/dashboard' %>
			<div class="clearfix"></div>
    </div>
    <div id="roommatesFooter" class="boxFooter"></div>
  </div>
  

  <div id="payments">
    <%= link_to '', new_payment_path, {:class => 'addBanner'}%>
    <div id="paymentsHeader" class="boxHeader"></div>
    <div id="roommatesMiddle" class="boxMiddle">
      <div class="column_1">
        <h2>People I paid</h2>
        <ul>
          <% @person.recent_payments_made.each do |e| %>
            <li>
							<span class='expenseName'><%= e[:name] %> <%= link_to "Delete", payment_path(e[:id]), :method => :delete, :confirm => "Are you sure want to delete this payment? You cannot undo this.", :class => "smallLink" %></span> 
							<span class='amount'>$<%= e[:amount] %></span> 
							<span class="expenseSmall"></span>
							<span class="expenseDate"><%= e[:created_at].to_s(:short) %></span>
							<div class="clearfix"></div>
						</li>
          <% end %>
					<li class="last"><%= link_to "More...", payments_path, {:class => "more"} %></li>
        </ul>
      </div>
      <div class="column_2">
        <h2>People who paid me</h2>
        <ul>
          <% @person.recent_payments_received.each do |e| %>
            <li>
							<span class='expenseName'><%= e[:name] %></span> 
							<span class='amount'>$<%= e[:amount] %></span> 
							<span class="expenseSmall"></span>
							<span class="expenseDate"><%= e[:created_at].to_s(:short) %></span>
							<div class="clearfix"></div>
						</li>
          <% end %>
					<li class="last"><%= link_to "More...", payments_path, {:class => "more"} %></li>
        </ul>
      </div>
			<div class="clearfix"></div>
    </div>
    <div id="roommatesFooter" class="boxFooter"></div>
  </div>
  
  <div id="roommates">
    <%= link_to '', new_person_path,  {:class => 'addBanner'}%>
    <div id="roommatesHeader" class="boxHeader"></div>
    <div id="roommatesMiddle" class="boxMiddle">
      <div class='column_1'>
				<ul>
	        <% for roommate in @house.people %>
	          <li>
							<span class='expenseName'><%= roommate.name %></span>
							<span class='amount'></span>
							<span class='expenseSmall'></span>
							<span class='expenseDate'></span>
							<div class="clearfix"></div>
						</li>
	        <% end %>
	      </ul>
			</div>
    </div>
    <div id="roommatesFooter" class="boxFooter"></div>
  </div>
  
  <div class="clearfix"></div>
  