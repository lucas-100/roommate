<div id="header">
  <h1><%= link_to @house.name, root_path %> : Expenses</h1>
  <%= link_to '', new_expense_path, {:id => 'newExpense'}%>
  <%= link_to '', new_payment_path, {:id => 'newPayment'}%>
</div>
<div class="clearfix"></div>

<div id="roommatesMiddle" class="boxMiddle">
      <div class="single_column">
        <h2>All Expenses</h2>
        <ul>
					<% @expenses.each do |e| %>
            <li <%= "class='owner'" if e.loaner_id == @person.id %>>
							<span class='expenseName'><%= e.name %> <%= (link_to "Delete", expense_path(e), :method => :delete, :confirm => "Are you sure you want to delete #{e.name}? This cannot be undone", :class => "smallLink") if e.loaner_id == @person.id %></span> 
							<span class='amount'>$<%= e.amount %></span> 
							<span class='expenseSmall'><%= "#{e.notes}" unless e.notes.nil? %></span>
							<span class="expenseDate"><%= e.created_at.to_s(:short) %></span>
							<div class="clearfix"></div>
						</li>
          <% end %>
        </ul>
      </div>	
			<div class="clearfix"></div>
</div>

<div class="boxFooter"></div>
