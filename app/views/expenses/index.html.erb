<h1>Listing expenses for <%= @house.name %></h1>

<table>
  <tr>
    <th>Name</th>
		<th>Amount in cents</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @expenses.each do |expense| %>
  <tr>
    <td><%= expense.name %></td>
		<td><%= expense.amount_in_cents %></td>
    <td><%= link_to 'Show', house_expense_path(@house, expense) %></td>
    <td><%= link_to 'Edit', edit_house_expense_path(@house, expense) %></td>
    <td><%= link_to 'Destroy', house_expense_path(@house, expense), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

