<h2>Things I didn't pay for</h2>
<ul>
  <% @person.recent_expenses.each do |e| %>
    <li>
			<span class='expenseName'><%= e.name %></span> 
			<span class='amount'>$<%= e.amount %> (<%=e.loaner.first_name%>)</span> 
			<span class='expenseSmall'><%= "#{e.notes}" unless e.notes.nil? %></span>
			<span class="expenseDate"><%= e.created_at.to_s(:short) %></span>
			<div class="clearfix"></div>
		</li>
  <% end %>
	<li class="last"><%= link_to "More...", expenses_path, {:class => "more"} %></li>
</ul>
</div>
<div class="column_2">
<h2>Things I paid for</h2>
<ul>
  <% @person.recent_loans.each do |e| %>
    <li>
			<span class='expenseName'><%= e.name %> <%= link_to "Delete", expense_path(e), :method => :delete, :confirm => "Are you sure you want to delete this expense? You cannot undo this.", :class => "smallLink" %></span>
			<span class='amount'>$<%= e.amount %></span> 
			<span class='expenseSmall'><%= "#{e.notes}" unless e.notes.nil? %></span>
			<span class="expenseDate"><%= e.created_at.to_s(:short) %></span>
			<div class="clearfix"></div>
		</li>
	<% end %>
	<li class="last"><%= link_to "More...", expenses_path, {:class => "more"} %></li>
</ul>
</div>