<div id="header">
  <h1><%= link_to @house.name, root_path %> : Payments</h1>
  <%= link_to '', new_expense_path, {:id => 'newExpense'}%>
  <%= link_to '', new_payment_path, {:id => 'newPayment'}%>
</div>
<div class="clearfix"></div>

<div id="roommatesMiddle" class="boxMiddle">
      <div class="column_1">
        <h2>All Payments Received</h2>
        <ul>
					<% @payments_received.each do |p| %>
            <li>
							<span class='expenseName'><%= p.person_paying.name %></span> 
							<span class='amount'>$<%= p.amount %></span> 
							<span class='expenseSmall'><%= "#{p.notes}" unless p.notes.nil? %></span>
							<span class="expenseDate"><%= p.created_at.to_s(:short) %></span>
							<div class="clearfix"></div>
						</li>
          <% end %>
        </ul>
      </div>	
			<div class="column_2">
				<h2>All Payments Made</h2>
        <ul>
					<% @payments_made.each do |p| %>
            <li>
							<span class='expenseName'><%= p.person_paying.name %> <%= (link_to "Delete", payment_path(p), :method => :delete, :confirm => "Are you sure you want to delete this payment? This cannot be undone", :class => "smallLink") %></span> 
							<span class='amount'>$<%= p.amount %></span> 
							<span class='expenseSmall'><%= "#{p.notes}" unless p.notes.nil? %></span>
							<span class="expenseDate"><%= p.created_at.to_s(:short) %></span>
							<div class="clearfix"></div>
						</li>
          <% end %>
        </ul>
			</div>
			<div class="clearfix"></div>
</div>

<div class="boxFooter"></div>
